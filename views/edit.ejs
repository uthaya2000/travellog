<%- include("partials/header.ejs") %>
<div id= "backgr">

	<div id="newBac">
		<div class="row">
			<h4><a href="/travellog/visited"><img src="/pics/arrow.svg" alt="" style="width: 3rem; height: 2rem;margin-right: 10px;"></a> Edit Place Details</h4>
			<div class="col-md-6">
				<div class="container" style="margin-top: 100px;">
					<img id="image" src="/pics/travel-illustration.svg" alt="">
				</div>
			</div>
			<div class="col-md-6 col-sm-12">
				<div id="formCon" class="container">
					<form action="/travellog/<%=place._id %>?_method=PUT" method="POST" id="createForm" enctype="multipart/form-data">
						<p>Add Details about the place where you have visited</p>
						<div class="form-group">
							<label>
								City
								<br>
								<input type="text" name="place[name]" class="form-control" style="width: 444px;height: 47px;" value="<%=place.name%> " required>
							</label>
						</div>
						<div class="form-group" mb-3">
							<label for="pic"></label>
							  <input type="file" class="form-control btn btn-primary" name="image" id="pic">
						</div>
						<div class="form-group">
							<label>
								Few word about this place
								<br>
								<input class="form-control" type="text" name="place[description]" style="width: 444px; height: 113px" value="<%=place.description%>" required>
							</label>
						</div>
						<div class="checkbox" style="text-transform: uppercase;font-size: 17px; font-weight:bold;"> 
						 <%  if(place.visited){ %>
								<label>
									<input type="checkbox" name="place[visited]" value=true checked>
									visited
								</label>
								<label>
									<input type="checkbox" name="place[bucket]" value=true>
									Bucket-list
								</label>
						  <%  }else{%>
								<label>
									<input type="checkbox" name="place[visited]" value=true>
									visited
								</label>
								<label>
									<input type="checkbox" name="place[bucket]" value=true checked>
									Bucket-list
								</label>
						 <%   } %>
						</div>
						<div class="form-group">
							<label>
								When did you travel here?
								<br>
								<input class="form-control" type="text" name="place[date]" style="width: 444px;height: 47px;" value="<%=place.date%>" required>
							</label>
						</div>
						<div class="pull-right" style="display: inline;">
							<a href="/travellog/visited" style="margin-right: 5px;width: 49px;height: 35px;">cancel</a>
							<%if(curuser && place.id.equals(curuser._id)){%>
								<button style="width: 149px;height: 35px;">Update place</button>
						<%  } %>
						</div>
					</form>	
					<form action="/travellog/<%=place._id %>?_method=DELETE" method="POST">
						<%if(curuser && place.id.equals(curuser._id)){%>
							<button id="delete">Delete this place</button>
						<%  } %>
					</form>
				</div>
				
			</div>
		</div>
	</div>

	
</div>
<%- include("partials/footer.ejs") %>